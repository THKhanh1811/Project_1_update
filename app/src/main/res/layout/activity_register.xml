<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bd4f61"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context="com.khanh.project.Register">

    <TextView
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Sign Up" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="70dp"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/signuplogo" />
    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="5dp"
        android:text="Username"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtuser"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:paddingLeft="5dp"
        android:text="" />
    <TextView
        android:id="@+id/txtpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="5dp"
        android:text="Password"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtpass"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="" />
    <TextView
        android:id="@+id/txtcomfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="5dp"
        android:text="Comfirm Password"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtcomfirm"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:ems="10"
        android:paddingLeft="5dp"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="" />
    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="5dp"
        android:text="Full name"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtname"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:ems="10"
        android:paddingLeft="5dp"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="" />
    <TextView
        android:id="@+id/txtmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="5dp"
        android:text="Email"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtmail"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:ems="10"
        android:paddingLeft="5dp"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="" />
    <TextView
        android:id="@+id/txtphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="5dp"
        android:text="Phone number"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edtphone"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="" />

    <Button
        android:id="@+id/create"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:background="@drawable/borderbutton"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:text="Create new account" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account."
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login here !"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
